{
   "compilerOptions": {
      "lib": [
         "es6",
      ],
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
   },
   "include": ["src", "types/env.d.ts"],
}